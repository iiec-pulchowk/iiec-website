{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/" }
  ],
  "rewrites": [
    { "source": "/old-route", "destination": "/new-route" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "max-age=0, s-maxage=86400" }
      ]
    }
  ],
  "git": {
    "deploymentEnabled": {
      "master": true
    }
  }
}
